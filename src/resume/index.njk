<h2 id="professional">Professional</h2>

{% for job in now.employment %}
  <div class="role">

    <a class="role__logo logo" href="{{ job.url }}" aria-label="{{ job.name }}" target="_blank" rel="noopener">
      {{ job.name }}
    </a>

    <div>
      <h3 class="role__title">{{ job.role }}</h3>
      <a class="role__org" href="{{ job.url }}" target="_blank" rel="noopener">{{ job.name }}</a>
      <p class="role__location">{{ job.location }}</p>
      <p class="role__dates">{{ job.start | htmlDateString("MMMM YYYY") }}{% if job.end %} – {{ job.end | htmlDateString("MMMM YYYY") }}{% endif %}</p>
    </div>

    {% if job.summary and job.info %}
    <details class="role__details">
      <summary>
        {{ job.summary }} <span>More…</span>
      </summary>
      <ul>
        {% for infoline in job.info %}
        <li>{{ infoline | safe }}</li>
        {% endfor %}
      </ul>
    </details>
    {% endif %}

    {% if job.summary and job.info == undefined %}
    <div class="role__details">
      {{ job.summary }}
    </div>
    {% endif %}
  </div>
{% endfor %}

