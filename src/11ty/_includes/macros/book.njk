{% macro listItem(book, showImg = false) %}
<li>
  <h3>{{ book.name }}</h3>
  {% if book.additional.author %}
  <p>Author: {{ book.additional.author }}</p>
  {% endif %}

  {% if book.readDate %}
    <date>Finished: {{ book.readDate | readableDate }}</date>
  {% endif %}

  {% if book.additional.isbn %}
    <div class="shopLinks">
      Find on:
      <ul class="shopLinks__list">
        {% if book.additional.christian %}
        <li><a href="https://10ofthose.com/uk/products?q={{ book.additional.isbn }}" target="_blank" rel="noopener">10ofThose.com</a></li>
        <li><a href="https://thegoodbook.co.uk/search?q={{ book.additional.isbn }}" target="_blank" rel="noopener">The Good Book Company</a></li>
        {% else %}
        <li><a href="https://amazon.co.uk/s?k={{ book.additional.isbn }}" target="_blank" rel="noopener">Amazon</a></li>
        <li><a href="https://waterstones.com/book/{{ book.additional.isbn }}" target="_blank" rel="noopener">Waterstones</a></li>
        <li><a href="https://abebooks.co.uk/servlet/SearchResults?isbn={{ book.additional.isbn }}" target="_blank" rel="noopener">Abebooks</a></li>
        {% endif %}
        <li><a href="https://goodreads.com/search?q={{ book.additional.isbn }}" target="_blank" rel="noopener">GoodReads</a></li>
        <li><a href="https://worldcat.org/search?q=bn%3A{{ book.additional.isbn }}" target="_blank" rel="noopener">Local library</a></li>
      </ul>
    </div>
  {% endif %}
</li>
{% endmacro %}
